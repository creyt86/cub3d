#color
GREEN = \e[32m
RED = \e[31m
WHITE = \e[39m
YELLOW = \e[33m
HIDDEN = \e[8m
RESET = \e[0m

NAME = cub3D

SRC_DIR = src/
SRC =	main.c\
		error.c\
		free.c\
		draw.c\
		player.c\
		player_movement.c\
		init.c\
		display_map.c\
		in_keys_hook.c\
		test.c\
		parse.c\
		checker_map.c\
		map_utils.c\
		ray.c\
		ray_casting.c\
		display_minimap.c\
		math_utils.c\

LIBFT_DIR = ft
LIBFT = $(SRC_DIR)$(LIBFT_DIR)
INC_LIBFT = -I $(LIBFT) -L $(LIBFT) -lft
MLX_DIR = mlx_macos
MLX = $(SRC_DIR)$(MLX_DIR)
MLX_LIB= $(SRC_DIR)$(MLX_DIR)
MLX_INC= $(SRC_DIR)$(MLX_DIR)
INC_MLX= -I $(MLX_INC) -L $(MLX_LIB) -lmlx -lm -framework OpenGL -framework AppKit

INC_SRC = cub3d.h
INC_DIR = include/
INC = $(addprefix $(INC_DIR), $(INC_SRC))

OBJ_DIR = obj/
_OBJ = $(SRC:.c=.o)
OBJ = $(addprefix $(OBJ_DIR), $(_OBJ))

CFLAGS = -Werror -Wall -Wextra
CFLAGS += -g3 -fsanitize=address

.PHONY: all clean fclean re leak norm run valgrind

all: $(NAME)

$(OBJ): $(OBJ_DIR)%.o: $(SRC_DIR)%.c $(INC)
	@mkdir -p $(OBJ_DIR)
	@printf "$(GREEN)üèóÔ∏è Generate cube3D objects %-33.33s\r" $@
	@$(CC) $(CFLAGS) -c $< -o $@ -I $(INC_DIR) -I $(LIBFT) -I $(MLX) -O3
	@printf "$(RESET)"

$(NAME): $(OBJ)
	@printf "\n$(RESET)"
	@$(MAKE) all -sC $(LIBFT)
	@$(MAKE) all -sC $(MLX)
	@$(CC) $(CFLAGS) $(OBJ) -o $(NAME) $(INC_LIBFT) $(INC_MLX)
	@printf "$(GREEN)üèóÔ∏è Generate $(NAME)$(RESET)\n"

clean:
	@$(MAKE) clean -sC $(LIBFT)
	@$(MAKE) clean -sC $(MLX)
	@$(RM) -r $(OBJ_DIR)
	@printf "$(YELLOW)‚ôªÔ∏è Clean cube3D objects$(RESET)\n"

fclean: clean
	@$(MAKE) fclean -sC $(LIBFT)
	@$(RM) $(NAME)
	@printf "$(RED)üóëÔ∏è Remove $(NAME)$(WHITE)\n"

leak: all
	leaks -atExit -- ./$(NAME) map/map.cub

norm:
	norminette $(addprefix $(SRC_DIR), $(SRC)) $(LIBFT) inc/

run:
	./$(NAME) map/map.cub

re: fclean all
